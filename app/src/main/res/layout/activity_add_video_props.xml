<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#917B5B"
    tools:context=".activities.AddVideoProps">

    <EditText
        android:id="@+id/editTextTitle"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="167dp"
        android:ems="10"
        android:textColor="#FFFFFF"
        android:textColorHint="#C5BFBF"
        android:textSize="14dp"
        android:hint="title.."
        android:inputType="text"
        android:paddingStart="10dp"
        android:background="@drawable/my_edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTerm1"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/my_edittext_border"
        android:ems="10"
        android:hint="your search term 1.."
        android:inputType="textPersonName"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#C5BFBF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <EditText
        android:id="@+id/editTextTerm2"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:paddingStart="10dp"
        android:textColor="#FFFFFF"
        android:textColorHint="#C5BFBF"
        android:inputType="textPersonName"
        android:hint="your search term 2.."
        android:background="@drawable/my_edittext_border"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTerm1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:width="230dp"
        android:text="You can optionally edit the title below to suit your sorting needs"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editTextTitle"
        app:layout_constraintStart_toStartOf="@+id/editTextTitle" />

    <TextView
        android:id="@+id/textView2"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:width="230dp"
        android:text="Enter at least one searchterm below that you want to use to find this video"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/editTextTerm1"
        app:layout_constraintStart_toStartOf="@+id/editTextTerm1"
        app:layout_constraintTop_toBottomOf="@+id/editTextTitle" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_width="300dp"
        android:layout_height="44dp"
        android:layout_marginBottom="40dp"
        android:background="#986417"
        android:text="Save Video"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>